<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.eteration.presentation.CartFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="140dp"/>

    <TextView
        android:id="@+id/total_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/buttonPurchase"
        app:layout_constraintBottom_toBottomOf="@id/buttonPurchase"
        app:layout_constraintEnd_toStartOf="@id/buttonPurchase"
        android:text="@string/total_price_text"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPurchase"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/complete_purchase"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="90dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>